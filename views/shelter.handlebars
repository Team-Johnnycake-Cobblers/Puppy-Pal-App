<h1>Shelter Test</h1>

<form class="uk-form-horizontal uk-margin-large">

    <div class="uk-width-1-2@s">
        <label class="uk-form-label" for="form-horizontal-text">Name</label>
        <div class="uk-form-controls">
            <input class="uk-input" id="name" type="text" placeholder="Name">
        </div>
    </div>

    <br>

    <div class="uk-width-1-2@s">
        <label class="uk-form-label" for="form-horizontal-text">Breed</label>
        <div class="uk-form-controls">
            <input class="uk-input" id="breed" type="text" placeholder="Breed">
        </div>
    </div>
    <br>

    <div class="uk-width-1-2@s">
        <label class="uk-form-label" for="form-horizontal-text">Age</label>
        <div class="uk-form-controls">
            <input class="uk-input" id="age" type="text" placeholder="Age In Years">
        </div>
    </div>


    <div class="uk-margin">
        <div class="uk-form-label">Gender</div>
        <div class="uk-form-controls uk-form-controls-text" id="gender">
            <label><input class="uk-radio" type="radio" name="radio1"> Male</label><br>
            <label><input class="uk-radio" type="radio" name="radio1"> Female</label>
        </div>
    </div>

    <div class="uk-margin">
        <label class="uk-form-label" for="form-horizontal-text">Image URL</label>
        <div class="uk-form-controls">
            <input class="uk-input" id="imgURL" type="text" placeholder="Enter Image URL Here">
        </div>
    </div>


    <div class="uk-margin">
        <textarea class="uk-textarea" id="info" rows="4" placeholder="Enter any additional information. (Medical needs, characteristcs, etc...)"></textarea>
        </div>

    <button class=" uk-button uk-button-default" id="shelSubmit">Submit</button>

</form>